{
  "version": 2,
  "builds": [
    { "src": "build/server.js", "use": "@now/node-server" },
    {
      "src": "build/public/**/*",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "build/public/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "build/public/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "build/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "github": {
    "autoAlias": false
  }
}
